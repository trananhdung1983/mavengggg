<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        <import resource="datasource-config.xml" />
        <import resource="webflow-config.xml" /> 
        <import resource="security-config.xml" />      
        
        <!-- DAO declaration -->
        <bean id="userDao" class="mavengggg.dao.UserJpaDao"/>
        
        <!-- Services declarations -->
        <bean id="userService" class="mavengggg.services.impl.UserServiceImpl">
        	<property name="userDao" ref="userDao" />
        </bean>
        
        <bean id="userAuthenticationProviderService" class="mavengggg.services.impl.UserAuthenticationProviderServiceImpl">
        	<property name="authenticationManager" ref="authenticationManager" />
        
        </bean>
</beans>
